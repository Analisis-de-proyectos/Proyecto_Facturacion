
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h2>Login</h2>

<div class="row">

    <form action="@Url.Content("~/Acceso/Login")" method="post">
        <div class="form-group">
            <label>Usuario</label>
            </BR><input type="email" name="username" />
        </div>
        <div class="form-group">
            <label>Contraseña</label>
            </BR><input type="password" name="password" />
        </div>
        <div class="form-group">
            <input type="submit" Value="Entrar" class="btn-success" />

        </div>
    </form>

    <div class="danger">
        @ViewBag.Error
    </div>
</div>
